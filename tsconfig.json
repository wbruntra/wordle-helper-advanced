{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@config": ["config.js"],
      "@secrets": ["secrets.js"],
      "@db_connection": ["db_connect.js"],
      "@advancedUtils": ["client/src/advancedUtils.ts"]
    }
  },
  "include": ["app.ts", "bin/**/*", "src/**/*", "utils/**/*", "*.ts", "client/src/advancedUtils.ts"],
  "exclude": [
    "node_modules",
    "client/**/*",
    "dist/**/*",
    "*.js",
    "**/*.js",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "files": true,
    "experimentalSpecifierResolution": "node"
  }
}
